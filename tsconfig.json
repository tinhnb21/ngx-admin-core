{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src/app",
    "paths": {
      "@theme/*": [
        "@theme/*"
      ],
      "@core/*": [
        "@core/*"
      ],
      "@shared/*": [
        "@shared/*"
      ]
    },
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "useDefineForClassFields": false
  }
}
